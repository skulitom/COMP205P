<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.UpdateBalance"
             Title="Update Balance">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LargeLabel"
                   TargetType="Label">
                <Setter Property="FontSize"
                        Value="Large"></Setter>
                <Setter Property="TextColor"
                        Value="Black"></Setter>
                <Setter Property="Margin"
                        Value="5"></Setter>
                <Setter Property="HorizontalOptions"
                        Value="Center"></Setter>
            </Style>
            <Style x:Key="AquaButtonStyle"
                   TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="Aqua"></Setter>
                <Setter Property="TextColor"
                        Value="Black"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout BackgroundColor="#EEEEEE"
            Padding="60">
        <Label Text="Your current balance is" Style="{StaticResource LargeLabel}" />
        <Label Text="{Binding balance}" Style="{StaticResource LargeLabel}" />
        <Label Text="Amount to Deposit/Withdraw" Style="{StaticResource LargeLabel}" />
        <Entry x:Name="amountEntry" Placeholder="amount" Keyboard="Numeric"/>
        <Button Text="Deposit" Clicked="OnDepositButtonClicked" Style="{StaticResource AquaButtonStyle}"/>
        <Button Text="Withdraw" Clicked="OnWithdrawButtonClicked" Style="{StaticResource AquaButtonStyle}"/>
        <Label x:Name="amountMessageLabel" />
    </StackLayout>
</ContentPage>