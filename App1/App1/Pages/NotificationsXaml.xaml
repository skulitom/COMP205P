<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.NotificationsXaml"
             Title="Notifications">
    <StackLayout >
        <Grid HorizontalOptions="FillAndExpand" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="Notifications" FontSize="20" HorizontalOptions="Start" Grid.Column="0" />
            <Switch HorizontalOptions="End" Grid.Column="1"></Switch>
        </Grid>
    </StackLayout>
</ContentPage>