<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.ChangeLanguageXaml"
             Title="Language">
    <ContentPage.Resources>
    <ResourceDictionary>
        <Style x:Key="LargeLabel"
                   TargetType="Label">
            <Setter Property="FontSize"
                        Value="Large"></Setter>
            <Setter Property="TextColor"
                        Value="Black"></Setter>
            <Setter Property="Margin"
                        Value="5"></Setter>
            <Setter Property="HorizontalOptions"
                        Value="Center"></Setter>
        </Style>
        <Style x:Key="AquaButtonStyle"
                   TargetType="Button">
            <Setter Property="BackgroundColor"
                        Value="Aqua"></Setter>
            <Setter Property="TextColor"
                        Value="Black"></Setter>
        </Style>
    </ResourceDictionary>
</ContentPage.Resources>
<StackLayout BackgroundColor="#EEEEEE"
            Padding="60">
        <Label Text="Current Language" Style="{StaticResource LargeLabel}" />
        <Label Text="{Binding language}" Style="{StaticResource LargeLabel}" />
        <Label Text="Select your language" Style="{StaticResource LargeLabel}"></Label>
        <Picker x:Name="languagepicker" Title="Select a Language" SelectedIndexChanged="Picker_SelectedIndexChanged">
            <Picker.Items>
                <x:String>EN</x:String>
                <x:String>FR</x:String>
            </Picker.Items>
        </Picker>
        <Label x:Name="langMessageLabel" />
    </StackLayout>
</ContentPage>