<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.SettingsXaml"
             Title="Settings">
    <ScrollView>
        <StackLayout HorizontalOptions="FillAndExpand" Padding="10">
            <Grid HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Change My Username" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="0" Grid.Column="1" VerticalOptions="Center" Text=">"  FontAttributes="Bold" FontSize="40"/>
                <Label Grid.Row="1" Grid.Column="0" Text="Change My Email" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Text=">"  FontAttributes="Bold" FontSize="40" />
                <Label Grid.Row="2" Grid.Column="0" Text="Change My Password" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="2" Grid.Column="1" VerticalOptions="Center" Text=">" FontAttributes="Bold" FontSize="40" />
                <Label Grid.Row="3" Grid.Column="0" Text="Change My Profile Picture" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="3" Grid.Column="1" VerticalOptions="Center" Text=">" FontAttributes="Bold" FontSize="40" />
                <Label Grid.Row="4" Grid.Column="0" Text="Security Question" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="4" Grid.Column="1" VerticalOptions="Center" Text=">" FontAttributes="Bold" FontSize="40"/>
                <Label Grid.Row="5" Grid.Column="0" Text="Language" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="5" Grid.Column="1" VerticalOptions="Center" Text=">" FontAttributes="Bold" FontSize="40"/>
                <Label Grid.Row="6" Grid.Column="0" Text="Notifications" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="6" Grid.Column="1" VerticalOptions="Center" Text=">" FontAttributes="Bold" FontSize="40"/>
                <Label Grid.Row="7" Grid.Column="0" Text="Sign Out" VerticalOptions="Center" FontSize="20" LineBreakMode="NoWrap" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="nothing" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Row="7" Grid.Column="1" VerticalOptions="Center" Text=">" FontAttributes="Bold" FontSize="40"/>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>